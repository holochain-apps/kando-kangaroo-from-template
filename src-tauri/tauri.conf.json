{
  "build": {
    "beforeDevCommand": "npm run dist",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "KanDo",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "cli": {
      "description": "Running KandDo from the command line",
      "args": [
        {
          "name": "profile",
          "takesValue": true,
          "multiple": false
        }
      ]
    },
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "kando.apps.holochain.org",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": []
  }
}
